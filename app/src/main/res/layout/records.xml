<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/student_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_centerHorizontal="true"
        android:textColor="#7c1515"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/student_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_percent"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/labellistclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/standard"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelliststudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/labellistclass"
        android:text="@string/students"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listclass"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/labellistclass"
        android:layout_marginTop="10dp"
        android:verticalScrollbarPosition="left" />

    <ListView
        android:id="@+id/liststudents"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/labelliststudents"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/listclass" />


</RelativeLayout>